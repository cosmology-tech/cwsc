{
  "name": "@terran-one/cwsc",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "bin",
    "dist",
    "src",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "cwsc": "./bin/run"
  },
  "scripts": {
    "prepack": "bun run build && oclif manifest",
    "postpack": "shx rm -f oclif.manifest.json",
    "build": "shx rm -rf dist && tsc --module commonjs && webpack --mode production",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "format": "prettier --check ./src/**/*.ts",
    "format:fix": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "parse": "ts-node src/parser/index.ts",
    "viz": "ts-node src/vizserver.ts",
    "cli": "./bin/dev",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "gen:tm-grammar": "ts-node ./scripts/gen-tm-grammar.ts",
    "antlr-lexer": "antlr4ts ./grammar/CWScriptLexer.g4 -o ./src",
    "antlr-parser": "antlr4ts -visitor ./grammar/CWScriptParser.g4 -o ./src -lib ./src/grammar",
    "antlr": "bun run antlr-lexer && bun run antlr-parser",
    "doc": "typedoc",
    "prepublishOnly": "npm run build",
    "test": "jest __tests__"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Terran One LLC",
  "module": "dist/cwsc.esm.js",
  "oclif": {
    "bin": "cwsc",
    "dirname": "cwsc",
    "commands": "./dist/cli/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/chalk": "^2.2.0",
    "@types/cytoscape": "^3.19.4",
    "@types/cytoscape-dagre": "^2.3.0",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.178",
    "@types/omelette": "^0.4.2",
    "@types/plist": "^3.0.2",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "oclif": "^3",
    "path-browserify": "^1.0.1",
    "plist": "^3.0.6",
    "prettier": "^2.6.1",
    "shx": "^0.3.4",
    "size-limit": "^7.0.8",
    "terser-webpack-plugin": "4",
    "tmlanguage-generator": "^0.4.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.5.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.4",
    "typescript-call-graph": "^0.0.3",
    "webpack": "5.76.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-autocomplete": "^2.1.9",
    "@oclif/plugin-help": "^5",
    "antlr4ts": "^0.5.0-alpha.4",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "chalk": "4.1.2",
    "commander": "^9.0.0",
    "ejs": "^3.1.6",
    "fs-extra": "^11.1.1",
    "immutable": "^4.0.0",
    "listr": "^0.14.3",
    "lodash": "^4.17.21",
    "omelette": "^0.4.17",
    "process": "^0.11.10",
    "source-map": "^0.7.3",
    "stream-browserify": "^3.0.0",
    "toml": "^3.0.0",
    "vscode-languageserver": "^8.1.0",
    "winston": "^3.8.2",
    "yaml": "^1.10.2"
  }
}
